{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
      "@nimiq/browser-warning"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "config": [
        "src/config/config.local.ts"
      ]
    },
    "lib": [
      "es2017",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "esnext.bigint"
    ]
  },
  "include": [
    "types/Nimiq.d.ts",
    "types/BitcoinJS.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
