{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist/src/",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "types/Nimiq.d.ts",
    "types/shims-config.d.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
