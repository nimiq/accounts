{
    "name": "@nimiq/hub",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "serve": "yarn i18n:extract && vue-cli-service serve",
        "build": "yarn i18n:extract && vue-cli-service build --modern App",
        "build:ci": "yarn i18n:extract && build=testnet vue-cli-service build",
        "lint": "vue-cli-service lint --no-fix",
        "test:unit": "vue-cli-service test:unit",
        "test": "yarn test:unit",
        "pr": "yarn lint && yarn build:ci && yarn test && cd client && yarn lint && yarn build",
        "postinstall": "cd client && yarn",
        "i18n:extract": "node ./node_modules/webpack-i18n-tools/index.js ./src/i18n/en.po",
        "i18n:pull": "tx pull --all --parallel --no-interactive --force --minimum-perc 95",
        "i18n:push": "tx push --source",
        "i18n:sync": "yarn i18n:extract && yarn i18n:push ; yarn i18n:pull"
    },
    "dependencies": {
        "@nimiq/browser-warning": "^1.1.0",
        "@nimiq/electrum-client": "https://github.com/nimiq/electrum-client#build",
        "@nimiq/iqons": "^1.5.2",
        "@nimiq/keyguard-client": "https://gitpkg.now.sh/nimiq/keyguard?2804f3cb140177db2755f4c579c0aa370535b865&scripts.postinstall=cd%20client%20%26%26%20.%2Fbuild-gitpkg.sh",
        "@nimiq/ledger-api": "^1.1.0",
        "@nimiq/network-client": "^0.4.0",
        "@nimiq/rpc": "^0.4.1",
        "@nimiq/style": "^0.8.2",
        "@nimiq/utils": "^0.5.0",
        "@nimiq/vue-components": "https://github.com/nimiq/vue-components#build/hub",
        "@sentry/browser": "^5.12.1",
        "@sentry/integrations": "^5.12.0",
        "big-integer": "^1.6.48",
        "vue": "^2.6.11",
        "vue-i18n": "^8.17.6",
        "vue-property-decorator": "^8.4.0",
        "vue-router": "^3.0.2",
        "vuex": "^3.1.2",
        "vuex-class": "^0.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@nimiq/core": "^1.5.4",
        "@nimiq/core-web": "^1.5.4",
        "@vue/babel-preset-app": "^3.4.1",
        "@vue/cli-plugin-typescript": "~4.2.2",
        "@vue/cli-plugin-unit-jest": "~4.2.2",
        "@vue/cli-plugin-vuex": "~4.2.2",
        "@vue/cli-service": "~4.2.2",
        "@vue/test-utils": "^1.0.0-beta.29",
        "babel-core": "7.0.0-bridge.0",
        "bitcoinjs-lib": "^5.1.10",
        "copy-webpack-plugin": "^4.5.2",
        "fake-indexeddb": "^2.0.5",
        "jest": "^24.1.0",
        "script-ext-html-webpack-plugin": "^2.1.4",
        "ts-jest": "^24.0.0",
        "typescript": "~3.7.5",
        "vue-template-compiler": "^2.6.11",
        "webpack-i18n-tools": "https://github.com/nimiq/webpack-i18n-tools#master",
        "write-file-webpack-plugin": "^4.5.1"
    }
}
